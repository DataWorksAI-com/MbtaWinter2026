# ============================================================
# MBTA Winter 2026 — Environment Variables
# Copy this file to .env and fill in your values.
# DO NOT commit .env to version control!
# ============================================================

# ─── Required API Keys ───
OPENAI_API_KEY=sk-your-openai-api-key-here
MBTA_API_KEY=your-mbta-api-key-here

# ─── Exchange Agent ───
USE_SLIM=true
REGISTRY_URL=http://registry:6900
EXCHANGE_AGENT_URL=http://exchange:8100

# ─── Agent URLs (K8s service names or localhost for dev) ───
ALERTS_AGENT_URL=http://alerts-agent:50051
PLANNER_AGENT_URL=http://planner-agent:50052
STOPFINDER_AGENT_URL=http://stopfinder-agent:50053

# ─── Observability ───
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
CLICKHOUSE_ENABLED=true
CLICKHOUSE_HOST=clickhouse
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DB=mbta_logs

# ─── Application ───
LOG_LEVEL=INFO
